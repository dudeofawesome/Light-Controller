<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="@dimen/widget_margin">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/main"
            android:background="#22000000"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <LinearLayout
                android:id="@+id/global"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="@string/global"
                    android:id="@+id/textView"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:rotation="-90"
                    android:background="#22FFFFFF"
                    android:layout_marginLeft="-36dp"
                    android:layout_marginRight="-36dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"/>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I"
                        android:id="@+id/ig"
                        android:background="@drawable/button_background_white"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="O"
                        android:id="@+id/og"
                        android:background="@drawable/button_background_white_off"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/zone1"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:textSize="12dp"
                android:singleLine="true"
                android:ellipsize="end">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="@string/Zone1"
                    android:id="@+id/headzone1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:rotation="-90"
                    android:background="#22FFFFFF"
                    android:layout_marginLeft="-36dp"
                    android:layout_marginRight="-36dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"
                    android:clickable="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I"
                        android:id="@+id/i1"
                        android:background="@drawable/button_background_white"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="O"
                        android:id="@+id/o1"
                        android:background="@drawable/button_background_white_off"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/zone2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="@string/Zone2"
                    android:id="@+id/headzone2"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:rotation="-90"
                    android:background="#22FFFFFF"
                    android:layout_marginLeft="-36dp"
                    android:layout_marginRight="-36dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"
                    android:clickable="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I"
                        android:id="@+id/i2"
                        android:background="@drawable/button_background_white"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="O"
                        android:id="@+id/o2"
                        android:background="@drawable/button_background_white_off"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zone3"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="@string/Zone3"
                    android:id="@+id/headzone3"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:rotation="-90"
                    android:background="#22FFFFFF"
                    android:layout_marginLeft="-36dp"
                    android:layout_marginRight="-36dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"
                    android:clickable="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I"
                        android:id="@+id/i3"
                        android:background="@drawable/button_background_white"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="O"
                        android:id="@+id/o3"
                        android:background="@drawable/button_background_white_off"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/zone4"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="85dp"
                    android:layout_height="match_parent"
                    android:text="@string/Zone4"
                    android:id="@+id/headzone4"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="10dp"
                    android:singleLine="true"
                    android:ellipsize="end"
                    android:rotation="-90"
                    android:autoText="false"
                    android:background="#22FFFFFF"
                    android:layout_marginLeft="-36dp"
                    android:layout_marginRight="-36dp"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@android:color/white"
                    android:clickable="false" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent">

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="I"
                        android:id="@+id/i4"
                        android:background="@drawable/button_background_white"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>

                    <Button
                        style="?android:attr/buttonStyleSmall"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:text="O"
                        android:id="@+id/o4"
                        android:background="@drawable/button_background_white_off"
                        android:layout_weight="1"
                        android:textColor="@android:color/white"/>
                </LinearLayout>
            </LinearLayout>

